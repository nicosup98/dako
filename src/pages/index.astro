<style>
	@keyframes cube {
		from {
			transform: scale(0) rotate(0deg) translate(-50%, -50%);
			opacity: 1;
		}
		to {
			transform: scale(20) rotate(960deg) translate(-50%, -50%);
			opacity: 0;
		}
	}
	.cube {
		position: absolute;
		top: 40vh;
		left: 45vw;
		width: 10px;
		height: 10px;
		border: solid 1px #7fffd4;
		transform-origin: top left;
		transform: scale(0) rotate(0deg) translate(-50%, -50%);
		animation: cube 12s ease-in forwards infinite;
	}
	.cube:nth-child(2n) {
		border-color: #6366f1;
	}
	.cube:nth-child(2) {
		animation-delay: 2s;
		left: 25vw;
		top: 35vh;
	}
	.cube:nth-child(3) {
		animation-delay: 4s;
		left: 75vw;
		top: 30vh;
	}
	.cube:nth-child(4) {
		animation-delay: 6s;
		left: 90vw;
		top: 75vh;
	}
	.cube:nth-child(5) {
		animation-delay: 8s;
		left: 10vw;
		top: 55vh;
	}
	.cube:nth-child(6) {
		animation-delay: 10s;
		left: 50vw;
		top: 20vh;
	}

	#logo {
		font-family: "Alegreya SC", sans-serif;
		width: 100%;
		height: 100%;
	}
	#logo text {
		animation: stroke 5s forwards;
		stroke-width: 2;
		stroke: #6366f1;
		font-size: 100px;
	}
	@keyframes stroke {
		0% {
			fill: rgba(127, 255, 212, 0);
			stroke: rgba(99, 102, 241, 1);
			stroke-dashoffset: 25%;
			stroke-dasharray: 0 50%;
			stroke-width: 2;
		}
		70% {
			fill: rgba(127, 255, 212, 0);
			stroke: rgba(99, 102, 241, 1);
		}
		80% {
			fill: rgba(127, 255, 212, 0);
			stroke: rgba(99, 102, 241, 1);
			stroke-width: 3;
		}
		100% {
			fill: rgba(127, 255, 212, 1);
			stroke: rgba(99, 102, 241, 0);
			stroke-dashoffset: -25%;
			stroke-dasharray: 50% 0;
			stroke-width: 0;
		}
	}

	.wrapper {
		background-color: transparent;
	}
</style>

